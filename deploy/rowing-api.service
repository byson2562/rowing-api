[Unit]
Description=RowingAPI production stack
Requires=docker.service
After=docker.service

[Service]
Type=oneshot
RemainAfterExit=yes
WorkingDirectory=/home/ubuntu/rowing-api
ExecStart=/usr/bin/docker compose -f docker-compose.prod.yml --env-file deploy/.env.prod up -d
ExecStop=/usr/bin/docker compose -f docker-compose.prod.yml --env-file deploy/.env.prod down
TimeoutStartSec=0

[Install]
WantedBy=multi-user.target
